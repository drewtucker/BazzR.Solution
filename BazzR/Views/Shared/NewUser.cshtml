@{
  Layout = "_Layout";
}

<div class="col-sm-10">
  <h4 class="headerHighlight">Create an Account:</h4>
  <hr>
  <form action="/user/create/{id}" method="post">
    <label for="new-first-name">First Name:</label>
    <input type="text" name="new-first-name" value="new-first-name">
    <br>
    <label for="new-last-name">Last Name:</label>
    <input type="text" name="new-last-name" value="new-last-name">
    <br>
    <label for="new-email">Email:</label>
    <input type="text" name="new-email" value="new-email">
    <br>
    <label for="new-username">Username:</label>
    <input type="text" name="new-username" value="new-username">
    <br>
    <label for="new-password">Password:</label>
    <input type="password" name="new-password" value="new-password">
    <br>
    <button type="submit" class="btn btn-info" name="button">Create</button>
  </form>
</div>
